<div class="sidebar">
        <% if (locals.animals !== undefined && locals.animals !== null) {
            locals.animals.forEach(group => { %>
                <div class="category">
                    <h2><%= group.name %></h2> <!-- Output group name -->
                    <ul>
                    <% group.animals.forEach(animal => { %>
                        <li class="sidebar-animal <%= animal.name %>"><%= animal.name %></li> <!-- Output each animal -->
                    <% }); %>
                    </ul>
                </div>
                <br> <!-- Add a line break or any other divider between groups -->
            <% });
        } %>
    </div>
    