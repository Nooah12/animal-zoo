<div class="sidebar">
    <% if (locals.sidemenu !== undefined && locals.sidemenu !== null) {
        locals.sidemenu.forEach(group => { %>
            <div class="category">
                <h2><%= group.name %></h2> <!-- Output group name -->
                <ul>
                <% group.animals.forEach(animal => { %>
                    <li class="sidebar-animal <%= animal %>"><a href="/animals/<%= animal %>?summary=<%= summaryType %>"><%= animal %></a></li>
                <% }); %>
                </ul>
            </div>
            <br>
        <% });
    } %>
</div>
